<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60sp"
    android:orientation="vertical"
    tools:context=".openCamera">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:padding="20sp">

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/lectId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:visibility="gone"/>
            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/border_line"
                android:fontFamily="sans-serif-light"
                android:text="Student "
                android:textColor="@color/colorFont"
                android:textFontWeight="900"
                android:textSize="28sp" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="SAP ID: "
                android:textColor="@color/colorFont"
                android:textFontWeight="900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/studSap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="70611019008"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />
        </TableRow>

        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="Name: "
                android:textColor="@color/colorFont"
                android:textFontWeight="900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/studName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Itachi Uchiha"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="Address: "
                android:textColor="@color/colorFont"
                android:textFontWeight="900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/studAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Stays at Konoha Village"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />
        </TableRow>


        <TableRow android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/border_line"
                android:fontFamily="sans-serif-light"
                android:text="For Lecture "
                android:textColor="@color/colorFont"
                android:textFontWeight="900"
                android:textSize="24sp" />
        </TableRow>
        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="Course: "
                android:textColor="@color/colorFont"
                android:textFontWeight="900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="MCA"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />
        </TableRow>
        <TableRow android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="Subject: "
                android:textColor="@color/colorFont"
                android:textFontWeight="900"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="OOSE"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/openCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120sp"
            android:background="@drawable/shadow_button"
            android:gravity="center"
            android:padding="20px"
            android:text="Upload"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Send Your Photo for Verification"
            android:textColor="@color/colorFont"
            android:layout_marginVertical="10sp"
            />
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Note: Make Sure it is similar to profile image uploaded."
            android:layout_marginVertical="10sp"
            />
    </LinearLayout>
</LinearLayout>