<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25sp"
        android:paddingTop="50sp">

        <TableRow>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10sp"
                android:layout_weight="1"
                android:text="College Details"
                android:textAlignment="center"
                android:textColor="@color/colorFG2"
                android:textSize="28sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SAP ID"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editSap"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_line"
                android:ems="10"
                android:hint="Enter SAP ID.."
                android:inputType="textPersonName"
                android:padding="7sp"
                android:text="70611019008"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFontLight"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="100dp"
                android:text="Course Name"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editCourse"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:width="100dp"
                android:background="@drawable/border_line"
                android:ems="10"
                android:hint="Enter Course Name"
                android:inputType="textPersonName"
                android:padding="7sp"
                android:text="MCA"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFontLight"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView4"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Class"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editClass"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_line"
                android:ems="10"
                android:hint="FY, SY, .."
                android:inputType="textPersonName"
                android:padding="7sp"
                android:text="S.Y."
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFontLight"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Subjects:"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTS"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_line"
                android:ems="10"
                android:hint="Enter No. of subjects"
                android:inputType="text"
                android:padding="7sp"
                android:text="9"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFontLight"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Roll No:"
                android:textColor="@color/colorFont"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editRollno"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_line"
                android:ems="10"
                android:hint="Enter Roll No."
                android:inputType="text"
                android:padding="7sp"
                android:text="032"
                android:textColor="@color/colorFont"
                android:textColorHint="@color/colorFontLight"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/addDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.95"
                android:background="@drawable/shadow_button"
                android:text="Submit"
                android:textColor="@color/colorFont1"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.10" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:itemIconTint="#FFF"
            app:itemTextColor="@color/colorFontLight"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu_teacher" />
    </FrameLayout>
</LinearLayout>