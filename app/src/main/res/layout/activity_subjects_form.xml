<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubjectsForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List of Subjects"
            android:textAlignment="center"
            android:textColor="@color/colorFG2"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:drawSelectorOnTop="false"
            android:paddingHorizontal="40sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15sp"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="25sp">

            <TableRow>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10sp"
                    android:layout_weight="1"
                    android:text="Form"
                    android:textAlignment="center"
                    android:textColor="@color/colorFG2"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SAP ID"
                    android:textColor="@color/colorFont"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editSubSapId"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/border_line"
                    android:ems="10"
                    android:hint="Enter SAP ID.."
                    android:inputType="textPersonName"
                    android:padding="7sp"
                    android:text="70611019008"
                    android:textColor="@color/colorFont"
                    android:textColorHint="@color/colorFontLight"
                    android:textSize="14sp" />
            </TableRow><TableRow>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Course"
                    android:textColor="@color/colorFont"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editSubCourse"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/border_line"
                    android:ems="10"
                    android:hint="Enter Course.."
                    android:inputType="textPersonName"
                    android:padding="7sp"
                    android:text="MCA"
                    android:textColor="@color/colorFont"
                    android:textColorHint="@color/colorFontLight"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subject Name:"
                    android:textColor="@color/colorFont"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editSubSubject"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/border_line"
                    android:ems="10"
                    android:hint="Enter Subject.."
                    android:inputType="textPersonName"
                    android:padding="7sp"
                    android:text="IEM"
                    android:textColor="@color/colorFont"
                    android:textColorHint="@color/colorFontLight"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Teacher Assigned"
                    android:textColor="@color/colorFont"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editSubTeach"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/border_line"
                    android:ems="10"
                    android:hint="Enter Teachers Name.."
                    android:inputType="textPersonName"
                    android:padding="7sp"
                    android:text="Radika"
                    android:textColor="@color/colorFont"
                    android:textColorHint="@color/colorFontLight"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <Button
                    android:id="@+id/addSubj"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60sp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="3"
                    android:background="@drawable/shadow_button"
                    android:text="Assign Subject"
                    android:textColor="@color/colorFont1"
                    android:textStyle="bold"
                    />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:itemIconTint="#FFF"
            app:itemTextColor="@color/colorFontLight"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu_teacher" />
    </FrameLayout>
</LinearLayout>